<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <Button
            android:id="@+id/forlad_btn_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Forlad lobby"
            android:layout_below="@+id/startLobby"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/createlobbytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="TextView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/startLobby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/createlobbytext"
            android:text="Start spil" />
    </RelativeLayout>

</LinearLayout>
